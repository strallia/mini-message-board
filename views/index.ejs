<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles.css" />
    <title><%= title %></title>
  </head>
  <body>
    <%- include("header") %>
    <main>
      <% messages.forEach((message) => { %>
      <div class="card">
        <section>
          <p class="text"><%= message.text %></p>
          <p class="name">
            by <% const user = message.user || "Anonymous" %> <%= user %>
          </p>
          <p class="added">
            <% const months =
            ["January","February","March","April","May","June","July","August","September","October","November","December"];
            const date = message.added; const month = months[date.getMonth()];
            const day = date.getDate(); const year = date.getFullYear(); const
            hour = date.getHours(); const minute = date.getMinutes();%> <%=
            month %> <%= day %>, <%= year %> at <%= hour %>:<%= minute %>
          </p>
        </section>
        <a href="/message/<%= message.id %>">Open</a>
      </div>
      <% }); %>
    </main>
  </body>
</html>
