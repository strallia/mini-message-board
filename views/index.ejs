<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
  </head>
  <body>
    <% messages.forEach((message) => { %>
    <div style="background-color: pink">
      <p><%= message.user %></p>
      <p><%= message.text %></p>
      <p><%= message.added %></p>
      <a href="/message/<%= message.id %>">Open</a>
    </div>
    <% }); %>
    <a href="/new">Add a message</a>
  </body>
</html>
